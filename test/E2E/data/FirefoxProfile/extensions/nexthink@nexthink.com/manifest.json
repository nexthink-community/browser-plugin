{
    "manifest_version": 2,

    "name": "Nexthink Plugin",
    "description": "This plugin once connected to your Nexthink Engine allow you to get data about the device in your current tab in real time.",
    "version": "0.1.0",
    "options_page": "options/options.html",

    "background": {
        "scripts": ["background/background.js"]
    },

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "Nexthink Plugin",
        "default_popup": "popup/popup.html"
    },

    "content_scripts": [
        {
            "matches": ["http://*/*","https://*/*","file://*/*"],
            "css" : ["inject/box.css"],
            "all_frames": true
        }
    ],

    "icons":{
        "16":"img/icon_16.png",
        "48":"img/icon_48.png",
        "128":"img/icon_128.png"
    },

    "omnibox": { "keyword" : "nxtp" },

    "permissions": [
        "http://*/",
        "https://*/",
        "file://*/",
        "activeTab",
        "contextMenus",
        "notifications",
        "storage",
        "tabs"
    ],

    "web_accessible_resources":[
        "img/icon.png",
        "inject/box.css",
        "inject/box.js",
        "img/logo.png"
    ],

    "applications": {
        "gecko": {
            "id": "nexthink@nexthink.com",
            "strict_min_version": "42.0"
        }
    }
}
